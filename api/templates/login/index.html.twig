{# templates/home/index.html.twig #}

{% extends 'content.html.twig' %}

{% block content %}

    <section class="row">
        <header class="content__header">
            <h1 class="content__header-title">{{ 'login'|trans|capitalize }}</h1>
        </header>
    </section>

    <div class="row">
        <div class="col-xl-9 col-lg-8 col-md-9">
            <div class="content-background">
                <div class="skiplink-target content" id="main-content">
                    <h2 id="inloggen-verzuimloket">{{ 'for citizen'|trans|capitalize }}</h2>
                    <p><a href="{{ commonground_cleanurl({"component":"ds"}) }}?responceUrl={{ absolute_url(path('app_default_index')) }}digispoof&backUrl={{ absolute_url(path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params'))) }}" class="btn btn--digid btn-block">{{ 'digid'|trans|capitalize }}</a></p>

                    <h2 id="inloggen-verzuimloket">{{ 'for businesses'|trans|capitalize }}</h2>
                    <p><a href="{{ commonground_cleanurl({"component":"eh"}) }}?responceUrl={{ absolute_url(path('app_default_index')) }}eherkenning&backUrl={{ absolute_url(path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params'))) }}" class="btn btn-block">{{ 'e-herkening'|trans|capitalize }}</a></p>

                    <h2 id="inloggen-verzuimloket">{{ 'for employees'|trans|capitalize }}</h2>

                    <form method="post" action="{{ path('app_user_login') }}" name="thisForm">

                        <div class="input">
                            <label class="input__label" for="username">{{ 'username'|trans|capitalize }}<span style="color: red">*</span></label>
                            <input required="" type="text" id="username" name="username" class="input__control input__control--l input__control--text">
                        </div>

                        <div class="input">
                            <label class="input__label" for="password">{{ 'password'|trans|capitalize }}<span style="color: red">*</span></label>
                            <input required="" type="password" id="password" name="password" class="input__control input__control--l input__control--text">
                        </div>


                        <div class="input">
                            <button type="submit" id="registreren" class="btn">{{ 'login'|trans|capitalize }} <i class="icon icon-arr-forward"></i></button>
                        </div>

                        <p><a href="{{ path('app_user_register') }}}" class="btn btn-block">{{ 'register'|trans|capitalize }}</a></p>

                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
