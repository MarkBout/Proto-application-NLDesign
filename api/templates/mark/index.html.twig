{% extends "base.html.twig" %}
{% block content %}
    <style>

        #display{
            list-style-type: disc;
            -webkit-column-count: 3;
            -moz-column-count: 3;
            column-count: 3;
        }

    </style>
    <h1>Template name & date modified</h1>
    <ul class="list list--card list--card-small" id="display">
        {% for template in templates %}
        <li class="card card--small">
                <div href="#" class="card__content">
                    <div class="card__body">
                        <span class="card__title">{{ template.name }} </span>
                        <p class="paragraph--s">{{ template.dateModified }}</p>
                    </div>
                </div>
        </li>
        {% endfor %}
    </ul>
{% endblock %}

