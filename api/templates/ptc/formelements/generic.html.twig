
<div class="input input--horizontal">
    <div>
        <label class="input__label" for="{{ property.id }}">{{ property.title }} {% if property.required is defined and property.required %}<span style="color: red;"><strong>*</strong></span>{% endif %}</label>
    </div>
    <input class="input__control input__control--text input__control--l" id="{{ property.id }}" type="{{ type }}" name="request[properties][{{ property.name }}]" {% if property.required is defined and property.required %}required{% endif %}
        {% if property.example is defined and property.example is not empty %}placeholder="{{ property.example }}" {% endif %}
        {% if request['properties'][property.name] is defined and  request['properties'][property.name] %}
        value="{{  request['properties'][property.name] }}"
        {% endif %}>
</div>

