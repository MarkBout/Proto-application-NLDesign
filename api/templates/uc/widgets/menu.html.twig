
<div class="content-background">
    <div class="content">
        <div class="edit-section">
            <h2>{{ 'your data'|trans|capitalize }}</h2>
        </div>
        <ul class="definition-list">
            {% if app.user.person is defined %}
                {% set person = commonground_resource(app.user.person)  %}
            {% endif %}
            {% if app.user.organization %}
            <li class="definition-list__item definition-list__item--horizontal">
                <div class="definition-list__title">
                    {{ 'name'|trans|capitalize }}
                </div>
                <div class="definition-list__description">
                    <p>{# if person.name is defined %}{{ person.name }}{% else #}{{ person.naam.voornamen }} {{ person.naam.voorvoegsel }} {{ person.naam.geslachtsnaam }}</p>
                </div>
            </li>
            <li class="definition-list__item definition-list__item--horizontal">
                <div class="definition-list__title">
                    {{ 'organization'|trans|capitalize }}
                </div>
                <div class="definition-list__description">
                    <p>{{ app.user }}</p>
                </div>
            </li>
            {% else %}
            <li class="definition-list__item definition-list__item--horizontal">
                <div class="definition-list__title">
                    {{ 'name'|trans|capitalize }}
                </div>
                <div class="definition-list__description">
                    <p>{{ app.user }}</p>
                </div>
            </li>
            {% if  person.verblijfplaats is defined %}
                {% set person = commonground_resource(app.user.person)  %}
            <li class="definition-list__item definition-list__item--horizontal">
                <div class="definition-list__title">
                    {{ 'address'|trans|capitalize }}
                </div>
                <div class="definition-list__description">
                    <p>{{ person.verblijfplaats.straatnaam }} {{ person.verblijfplaats.huisnummer }}, {{ person.verblijfplaats.postcode }} {{ person.verblijfplaats.woonplaatsnaam }}</p>
                </div>
            </li>
            {% endif %}
            {% endif %}
        </ul>
    </div>
</div>


<!-- Page Break -->
<div style="height: 20px"></div>

<ul>
    {% if commonground_component_health("cmc") %}
    <li class="sidenav__item">
        <a href="{{ path('app_cmc_index') }}">{{ 'messages'|trans|capitalize }}</a>
    </li>
    {%  endif %}
    {% if commonground_component_health("vrc") %}
    <li class="sidenav__item">
        <a href="{{ path('app_vrc_index') }}">{{ 'requests'|trans|capitalize }}</a>
    </li>
    {% endif %}
    {% if commonground_component_health("ptc") %}
    <li class="sidenav__item">
        <a href="{{ path('app_ptc_index') }}">{{ 'start request'|trans|capitalize }}</a>
    </li>
    {% endif %}
    {% if commonground_component_health("mrc") and app.user.organization %}
    <li class="sidenav__item">
        <a href="{{ path('app_user_jobpostings') }}">{{ 'job postings'|trans|capitalize }}</a>
    </li>
    {% endif %}
    {% if commonground_component_health("mrc") and not app.user.organization %}
    <li class="sidenav__item">
        <a href="{{ path('app_user_jobapplications') }}">{{ 'job applications'|trans|capitalize }}</a>
    </li>
    {% endif %}
    {% if commonground_component_health("edu") and app.user.organization %}
        <li class="sidenav__item">
            <a href="{{ path('app_edu_courses') }}">{{ 'cources'|trans|capitalize }}</a>
        </li>
        <li class="sidenav__item">
            <a href="{{ path('app_edu_programs') }}">{{ 'programs'|trans|capitalize }}</a>
        </li>
    {% endif %}
    {% if commonground_component_health("edu") and not app.user.organization %}
        <li class="sidenav__item">
            <a href="{{ path('app_edu_participants') }}">{{ 'programs and cources'|trans|capitalize }}</a>
        </li>
    {% endif %}
    {% if commonground_component_health("chrc") and app.user.organization  %}
    <li class="sidenav__item">
        <a href="{{ path('app_chrc_challenges') }}">{{ 'tenders'|trans|capitalize }}</a>
    </li>
    {% endif %}
    {% if commonground_component_health("chrc") %}
    <li class="sidenav__item">
        <a href="{{ path('app_chrc_pitches') }}">{{ 'pitches'|trans|capitalize }}</a>
    </li>
    {% endif %}
</ul>

<!-- Page Break -->
<div style="height: 20px"></div>

<a href="{{ path('app_user_logout') }}" class="btn btn--block">{{ 'logout'|trans|capitalize }}</a>
